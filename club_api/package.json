{
  "name": "express-ts-api",
  "version": "1.0.0",
  "description": "Rest API",
  "main": "app.ts",
  "scripts": {
    "start": "nodemon",
    "dev": "nodemon",
    "build": "yarn build-ts && yarn run lint",
    "migrate": "node -r ts-node/register -r tsconfig-paths/register src/migrate.ts",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-sass\" \"yarn watch-ts\" \"yarn watch-node\"",
    "test": "jest --forceExit --coverage --verbose --runInBand",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-sass\" \"yarn watch-ts\" \"yarn serve-debug\""
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*"
    ],
    "delay": 1000
  },
  "keywords": [
    "REST",
    "API"
  ],
  "author": "Aman",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "@types/uuid": "^3.4.5",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "md5": "^2.2.1",
    "multer": "^1.4.2",
    "mysql2": "^2.3.2",
    "sequelize": "^6.7.0",
    "uid": "0.0.2",
    "uniqid": "^4.1.1",
    "uuid": "^3.3.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.1",
    "@types/fb": "^0.0.23",
    "@types/hapi__joi": "^15.0.3",
    "@types/jest": "^24.0.17",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^12.0.10",
    "@types/sequelize": "^4.28.10",
    "@types/supertest": "^2.0.8",
    "@types/uniqid": "^4.1.3",
    "@types/validator": "^10.11.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "concurrently": "^4.1.2",
    "eslint": "^6.2.2",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "module-alias": "^2.2.1",
    "nodemon": "^1.19.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.5.3"
  }
}
